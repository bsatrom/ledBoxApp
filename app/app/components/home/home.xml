<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <GridLayout columns="150, 150*" rows="auto, auto, auto, *">
    <Button col="0" id="tempButton" tap="tempTap" text="Temperature" />
    <Button col="1" id="textButton" tap="textTap" text="Text" />

    <Button row="1" col="0" id="newsButton" tap="newsTap" text="News" />
    <Button row="1" col="1" id="stocksButton" tap="stocksTap" text="Stocks" />

    <Button row="2" col="0" id="plasmaButton" tap="plasmaTap" text="Plasma" />
    <Button row="2" col="1" id="randomButton" tap="randomTap" text="Random" />
  </GridLayout>
</Page>
